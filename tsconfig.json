{
  "extends": "@schoero/ts-config",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "declarationMap": false,
    "lib": ["ESNext", "DOM"],
    "noImplicitAny": false,
    "paths": {
      "swissqrbill:*": ["src/*"],
      "swissqrbill:browser:*": ["src/browser/*"],
      "swissqrbill:node:*": ["src/node/*"],
      "swissqrbill:pdf:*": ["src/pdf/*"],
      "swissqrbill:shared:*": ["src/shared/*"],
      "swissqrbill:svg:*": ["src/svg/*"],
      "swissqrbill:tests:*": ["tests/*"]
    },
    "target": "ES6"
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "src/browser",
    "lib"
  ]
}
